{
  "name": "fanyi",
  "version": "1.0.0",
  "description": "一个基于大模型API的浏览器翻译插件， 支持多种AI提供商的翻译服务。",
  "main": "background.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node build.js",
    "build:vite": "vite build",
    "preview": "vite preview",
    "build:watch": "vite build --watch",
    "clean": "rm -rf dist",
    "package": "npm run build && cd dist && zip -r ../extension.zip .",
    "release": "node release.js",
    "version:patch": "npm version patch && npm run sync-version",
    "version:minor": "npm version minor && npm run sync-version",
    "version:major": "npm version major && npm run sync-version",
    "sync-version": "node -e \"const pkg=require('./package.json');const manifest=require('./manifest.json');manifest.version=pkg.version;require('fs').writeFileSync('./manifest.json',JSON.stringify(manifest,null,2))\""
  },
  "keywords": [
    "chrome-extension",
    "translation",
    "ai",
    "openai",
    "browser-extension"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chrome": "^0.1.1",
    "terser": "^5.43.1",
    "vite": "^4.5.3",
    "vite-plugin-html": "^3.2.2"
  }
}
